  <body>
    <div class="content-container">
      <header class="mb-4">
        <div class="container">
          <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand" href="/home">Stock System</a>
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarNav"
              aria-controls="navbarNav"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                  <a class="nav-link" href="/invest">ลงทุน</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/user_stock">สินทรัพย์</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/transaction">รายการ</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/logout">ออกจากระบบ</a>
                </li>
              </ul>
            </div>
          </nav>
        </div>
      </header>

      <div class="container">
        <div class="row">
          <!-- First widget -->
          <div class="col-lg-8">
            <div class="tradingview-widget-container">
              <div class="tradingview-widget-container__widget"></div>
              <script
                type="text/javascript"
                src="https://s3.tradingview.com/external-embedding/embed-widget-advanced-chart.js"
                async
              >
                {
                  "width": "100%",
                  "height": "550",
                  "symbol": "<%= stock.symbol %>",
                  "interval": "D",
                  "timezone": "Asia/Bangkok",
                  "theme": "dark",
                  "style": "1",
                  "locale": "th_TH",
                  "hide_top_toolbar": true,
                  "allow_symbol_change": false,
                  "save_image": false,
                  "calendar": false,
                  "support_host": "https://www.tradingview.com"
                }
              </script>
            </div>
          </div>
      
          <!-- Second widget -->
          <div class="col-lg-4">
            <div class="tradingview-widget-container">
              <div class="tradingview-widget-container__widget"></div>
              <script
                type="text/javascript"
                src="https://s3.tradingview.com/external-embedding/embed-widget-symbol-profile.js"
                async
              >
                {
                  "width": "100%",
                  "height": "440",
                  "isTransparent": false,
                  "colorTheme": "dark",
                  "symbol": "<%= stock.symbol %>",
                  "locale": "th_TH"
                }
              </script>
            </div>
      
            <!-- Stock Price and Buy Button -->
            <div class="row mt-4 text-center">
              <h4>ราคาหุ้น: <span id="stock-price"><%= stock.price %></span></h4>
              <button class="btn btn-success mt-2 rounded-pill" data-bs-toggle="modal" data-bs-target="#BuyStockModal<%= stock._id %>">ซื้อ</button>
            </div>
          </div>
        </div>
      </div>

      <!-- Modal -->
      <div class="modal fade" id="BuyStockModal<%= stock._id %>" tabindex="-1"
        aria-labelledby="editStockModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editStockModalLabel">ซื้อ</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/invest/buy_stock/<%= stock._id %>" method="POST">
                        <div class="mb-3">
                            <input type="text" class="form-control" id="stockId" name="stockId"
                                value="<%= stock._id %>" hidden>
                        </div>
                        <div class="mb-3">
                            <label for="symbol" class="form-label">สัญลักษณ์หุ้น</label>
                            <input type="text" class="form-control" id="symbol" name="symbol"
                                value="<%= stock.symbol %>" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">ชื่อบริษัท</label>
                            <input type="text" class="form-control" id="name" name="name"
                                value="<%= stock.name %>" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">ราคาปัจจุบัน</label>
                            <input type="text" class="form-control" id="price" name="price"
                                value="<%= stock.price %>" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="quantity" class="form-label">จำนวนหุ้นที่ต้องการซื้อ</label>
                            <input type="number" class="form-control" id="quantity" name="quantity" placeholder="จำนวนหุ้นขั้นต่ำ 1 หุ้น">
                        </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary"
                        data-bs-dismiss="modal">ปิด</button>
                    <button type="submit" class="btn btn-primary">ซื้อหุ้น</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
      
      
