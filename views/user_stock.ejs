                                    <a class="nav-link" href="/logout">ออกจากระบบ</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </header>
            
            <div class="container">

                <% if (userStocks && userStocks.length > 0) { %>
                <h1>รายการสินทรัพย์</h1>
                <!-- จัด balance ให้อยู่มุมขวาของตาราง -->
                <div class="d-flex justify-content-end">
                    <h4>ยอดคงเหลือ: <%= userStocks[0].user_id.balance.toFixed(2) %></h4>
                </div>
            
                <table class="table">
                    <tr>
                        <th>สัญลักษณ์หุ้น</th>
                        <th>ชื่อบริษัท</th>
                        <th>ราคา</th>
                        <th>จำนวนหุ้น</th>
                        <th>ขายหุ้น</th>
                    </tr>
                    <% userStocks.forEach(userStock => { %>
                    <tr>
                        <td><%= userStock.stock_id.symbol %></td>
                        <td><%= userStock.stock_id.name %></td>
                        <td><%= userStock.stock_id.price.toFixed(2) %></td>
                        <td><%= userStock.quantity %></td>
                        <td><button class="btn btn-danger mt-2 rounded-pill" data-bs-toggle="modal" data-bs-target="#SellStockModal<%= userStock._id %>">ขายหุ้น</button></td>
                    </tr>
                    <% }) %>
                </table>
                <% } else { %>
                    <h1>ไม่มีสินทรัพย์</h1>
                    <h4>ยอดคงเหลือ: <%= userBalance.toFixed(2) %></h4>
                <% } %>
            </div>
            <% userStocks.forEach(userStock => { %>
            <!-- Modal -->
      <div class="modal fade" id="SellStockModal<%= userStock._id %>" tabindex="-1"
        aria-labelledby="editStockModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editStockModalLabel">ขายหุ้น</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/user_stock/sell_stock/<%= userStock._id %>" method="POST">
                        <div class="mb-3">
                            <label for="symbol" class="form-label">สัญลักษณ์หุ้น</label>
                            <input type="text" class="form-control" id="symbol" name="symbol"
                                value="<%= userStock.stock_id.symbol %>" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">ชื่อบริษัท</label>
                            <input type="text" class="form-control" id="name" name="name"
                                value="<%= userStock.stock_id.name %>" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">ราคาปัจจุบัน</label>
                            <input type="text" class="form-control" id="price" name="price"
                                value="<%= userStock.stock_id.price.toFixed(2) %>" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="quantity" class="form-label">จำนวนหุ้นที่ต้องการขาย</label>
                            <input type="number" class="form-control" id="quantity" name="quantity" value="<%= userStock.quantity %>" placeholder="จำนวนหุ้นขั้นต่ำ 1 หุ้น">
                        </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary"
                        data-bs-dismiss="modal">ปิด</button>
                    <button type="submit" class="btn btn-danger">ขายหุ้น</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <% }) %>
</div>
