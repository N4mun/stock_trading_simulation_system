                                <li class="nav-item">
                                    <a class="nav-link" href="/invest">ลงทุน</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/user_stock">สินทรัพย์</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/transaction">รายการ</a>
                                </li>
